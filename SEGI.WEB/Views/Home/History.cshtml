             data-aos="fade-y">
            <div class="timeline-line"></div>
            @{
                int index = 0;
            }
            @foreach (var item in Model?.History ?? new List<HistoryViewModel>())
            {
                var isOdd = index % 2 == 0; // Check if index is even or odd
                var positionClass = isOdd ? "odd" : "even";
                var orderClass = isOdd ? "" : "order-2"; // Adjust order for even items
                var marginClass = isOdd ? "mt-12" : "md:-mt-12";
                var lineClass = isOdd ? "odd" : "even";

                <div class="flex flex-row w-full aos-init aos-animate" data-aos="fade-y">
                    <div class="p-0 w-full md:w-1/2 mb-8 md:mb-20 @marginClass @positionClass @orderClass">
                        <div class="flex flex-row">
                            <div class="w-1/6 pt-14 -mt-1 md:order-2">
                                <div class="line @lineClass"></div>
                            </div>
                            <div class="flex-1 px-6">
                                <div class="font-sans-primary text-2xl | lg:text-2xl text-primary-500 font-semibold leading-tighter tracking-tight">
                                    @(item.Year != null ? item?.Year : "Currently")
                                </div>
                                <div class="mt-4 mb-4">
                                    <div class="w-full -mb-6">
                                        <p class="w-full font-sans-primary leading-snug tracking-tight text-sm mb-6 lg:text-base text-gray-800">
                                            @item?.Description
                                        </p>
                                    </div>
                                </div>
                                <div class="w-full">
                                    <div class="relative overflow-hidden w-full" style="padding-top: 8.75%;">
