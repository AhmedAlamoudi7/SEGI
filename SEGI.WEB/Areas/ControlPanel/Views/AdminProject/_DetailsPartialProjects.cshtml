<div class="card shadow-sm border-0 rounded-lg">
    <div class="row g-0">
        <!-- Left: Image section -->
        <div class="col-md-5">
            <div class="position-relative">
@*                 <img src="/Files/Images/@Model.Image_Cover" class="img-fluid rounded-start" alt="Cover Image" style="object-fit: cover; height: 100%; width: 100%;">
 *@                <div class="mt-3">
                    <img src="/Files/Images/@Model.Image" class="img-fluid rounded mx-auto d-block" alt="Additional Image" style="max-height: 150px; width: auto;">
                </div>
            </div>
        </div>
        <!-- Right: Details section -->
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title text-dark">@Model.Title</h2>
                <h2 class="card-title text-dark">@(Model?.Year ?? "")</h2>

                <p class="text-muted">
                    Category:
                    @if (Model.Categories != null && Model.Categories.Count > 0)

                    {
                        <span class="text-primary">
                            @for (var i = 0; i < Model.Categories.Count; i++)

                            {
                                @Model.Categories[i]
                                @if (i < Model.Categories.Count - 1)

                                {
                                    @: ,
                                }
                            }
                        </span>
                    }

                    else

                    {
                        <span class="text-primary">No categories</span>
                    }
                </p>
                <p class="text-muted">
                    Services:
                    @if (Model.Services != null && Model.Services.Count > 0)







                    {
                        <span class="text-primary">
                            @for (var i = 0; i < Model.Services.Count; i++)





                            {
                                @Model.Services[i]
                                @if (i < Model.Services.Count - 1)



                                {
                                    @: ,
                                }
                            }
                        </span>
                    }



                    else



                    {
                        <span class="text-primary">No Services</span>
                    }
                </p>
                 <h2 class="card-title text-dark">Views : @Model.ViewCount</h2>
                <p class="card-text mb-4">@Html.Raw(@Model.Description)</p>
             </div>
        </div>
    </div>
</div>
