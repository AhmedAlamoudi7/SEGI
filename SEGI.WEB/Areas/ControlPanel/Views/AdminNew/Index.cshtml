        function showDetailsModal(id) {
    // Open the modal
    $('#detailsModal').modal('show');

    // Use AJAX to load the content dynamically from the server
    $.ajax({
        url: '/ControlPanel/AdminNew/Details?id=' + id,
        type: 'GET',
        success: function (data) {
            // Load the data into the modal content area
            $('#modalContent').html(data);
        },
        error: function () {
            // Handle error case
            $('#modalContent').html('<p class="text-danger">Failed to load details.</p>');
        }
    });
}
    </script>
    <script type="text/javascript">
        var dataTable;

        $(document).ready(function () {
            loadDataTable();

       
        // Handle "Select All" checkbox click
        $('#selectAll').on('click', function () {
            var rows = dataTable.rows({ 'search': 'applied' }).nodes();
            $('input[type="checkbox"]', rows).prop('checked', this.checked);
        });

        // Handle individual row checkbox click
        $('#tblData tbody').on('change', 'input[type="checkbox"]', function () {
            if (!this.checked) {
                var el = $('#selectAll').get(0);
                if (el && el.checked && ('indeterminate' in el)) {
                    el.indeterminate = true;
                }
            }
        });

        // Handle "Delete Selected" button click
        $('#deleteSelected').on('click', function () {
            var selectedIds = [];
            dataTable.$('input[type="checkbox"]:checked').each(function () {
                selectedIds.push($(this).data('id'));
            });

            if (selectedIds.length > 0) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/ControlPanel/AdminNew/DeleteMultiple',
                            type: 'POST',
                            data: JSON.stringify(selectedIds),
                            contentType: 'application/json; charset=utf-8',
                            success: function (data) {
                                if (data.success) {
                                    dataTable.ajax.reload();
                                    toastr.success(data.message);
                                } else {
                                    toastr.error(data.message);
                                }
                            }
                        });
                    }
                });
            } else {
                toastr.warning('No rows selected');
            }
        });


        });


 function loadDataTable() {
    dataTable = $('#tblData').DataTable({
        "ajax": {
            "url": "/ControlPanel/AdminNew/GetAll"
        },
        "scrollX": true, // Enable horizontal scrolling
        "autoWidth": false, // Disable auto width to handle large columns more effectively
        "columns": [
              {
                    "data": "id",
                    "render": function (data, type, row) {
                        return `<input type="checkbox" data-id="${data}">`;
                    },
                    "width": "5%"
                },
            { "data": "title", "width": "15%" },
             { "data": "viewCount", "width": "15%" },

            {
                // Update the "category" column to display multiple categories
                "data": "categories",
                "render": function (data) {
                    if (data && data.length > 0) {
                        return data.map(function (category) {
                            return category; // Assuming "name" is the property of the category object
                        }).join(", ");
                    }
                    return "No categories";
                },
                "width": "15%"
            },
            {
                "data": "id",
                "render": function (data) {
                    return `
                        <div class="w-75 btn-group" role="group">
                            <a href="/ControlPanel/AdminNew/Update?id=${data}"
                               class="btn btn-primary mx-2">
                               <i class="bi bi-pencil-square"></i> Update
                            </a>
                            <a onClick=Delete('/ControlPanel/AdminNew/Delete?id=${data}')
                               class="btn btn-danger mx-2">
                               <i class="bi bi-trash-fill"></i> Delete
                            </a>
                            <a href="#" class="btn btn-info mx-2" onclick="showDetailsModal(${data})">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </div>
                    `;
                },
                "width": "15%"
            }
        ]
    });
}

        function Delete(url) {
