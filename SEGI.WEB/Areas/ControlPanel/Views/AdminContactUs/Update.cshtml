    <script type="text/javascript">
        "use strict";

        // Class definition
        var KTModalNewTarget = function () {
            var submitButton;
            var cancelButton;
            var validator;
            var form;
            var modal;
            var modalEl;

            // Init form inputs
            var initForm = function () {



            }

            // Handle form validation and submittion
            var handleForm = function () {
                // Stepper custom navigation

                // Init form validation rules. For more info check the FormValidation plugin's official documentation:https://formvalidation.io/
                validator = FormValidation.formValidation(
                    form,
                    {
                        fields: {
                            'title': {
                                validators: {
                                    notEmpty: {
                                        message: 'Title'
                                    }
                                }
                            }, 'email': {
                                validators: {
                                    notEmpty: {
                                        message: 'Email'
                                    }
                                }
                            }, 'phone': {
                                validators: {
                                    notEmpty: {
                                        message: 'Phone'
                                    }
                                }
                            }, 'fullName': {
                                validators: {
                                    notEmpty: {
                                        message: 'FullName'
                                    }
                                }
                            }
                        },
                        plugins: {
                            trigger: new FormValidation.plugins.Trigger(),
                            bootstrap: new FormValidation.plugins.Bootstrap5({
                                rowSelector: '.fv-row',
                                eleInvalidClass: '',
                                eleValidClass: ''
                            })
                        }
                    }
                );
                function submitId() {
                    let data = $("#kt_modal_new_model_form").serialize();
                    let id = $("#name_id").val();

                    let fullName = $("#name_fullName").val();
                    let email = $("#name_email").val();
                    let phone = $("#name_phone").val();
                    let title = $("#name_title").val();
                    let description = $("#name_description").val();

                    let formData = new FormData();
                    formData.append("title", title);
                    formData.append("description", description);
                    formData.append("email", email);
                    formData.append("phone", phone);
                    formData.append("fullName", fullName);

                     $.ajax({
                        type: 'POST',
                        url: '/ControlPanel/AdminContactUs/Update/' + id + '',

                        //contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        processData: false,
                        contentType: false,
                        data: formData,
                        success: function (response) {
                            if (response.success) {

                                Swal.fire({
                                    text: "AddSuccessfully",
                                    icon: "success",
                                    buttonsStyling: false,
                                    confirmButtonText: "AddSuccessfully",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                }).then(function (result) {
                                    if (result.isConfirmed) {
                                        form.reset();
                                        window.location = "/ControlPanel/AdminContactUs/Index";
                                    }
                                });
                            } else {
                                // DoSomethingElse()
                                Swal.fire({
                                    text: response.responseText,
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "TryAgain",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                });
                            };
                        },
                        error: function () {
                            Swal.fire({
                                text: "AddError",
                                icon: "error",
                                buttonsStyling: false,
                                confirmButtonText: "TryAgain",
                                customClass: {
                                    confirmButton: "btn btn-primary"
                                }
                            });
                        }
                    })
                }
                // Action buttons
                submitButton.addEventListener('click', function (e) {
                    e.preventDefault();

                    // Validate form before submit
                    if (validator) {
                        validator.validate().then(function (status) {
                            console.log('validated!');

                            if (status == 'Valid') {
                                submitButton.setAttribute('data-kt-indicator', 'on');

                                // Disable button to avoid multiple click
                                submitButton.disabled = true;

                                setTimeout(function () {
                                    submitButton.removeAttribute('data-kt-indicator');

                                    // Enable button
                                    submitButton.disabled = false;
                                    submitId();
                                }, 2000);
                            } else {
                                // Show error message.
                                Swal.fire({
                                    text: "AddError",
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                });
                            }
                        });
                    }
                });

                cancelButton.addEventListener('click', function (e) {
                    e.preventDefault();


                    Swal.fire({
                        text: "CancelRequest",
                        icon: "warning",
                        showCancelButton: true,
                        buttonsStyling: false,
                        confirmButtonText: "Yes",
                        cancelButtonText: "No",
                        customClass: {
                            confirmButton: "btn btn-primary",
                            cancelButton: "btn btn-active-light"
                        }
                    }).then(function (result) {
                        if (result.value) {
                            window.location = "Index";
                        } else if (result.dismiss === 'cancel') {
                            Swal.fire({
                                text: "NotCancelled",
                                icon: "error",
                                buttonsStyling: false,
                                confirmButtonText: "Ok",
                                customClass: {
                                    confirmButton: "btn btn-primary",
                                }
                            });
                        }
                    });
                });
            }

            return {
                // Public functions
                init: function () {
                    // Elements
                    form = document.querySelector('#kt_modal_new_model_form');
                    submitButton = document.getElementById('kt_modal_new_model_submit');
                    cancelButton = document.getElementById('kt_modal_new_model_cancel');

                    initForm();
                    handleForm();
                }
            };
        }();

        // On document ready
        KTUtil.onDOMContentLoaded(function () {
            KTModalNewTarget.init();
        });



    </script>
 		 }
