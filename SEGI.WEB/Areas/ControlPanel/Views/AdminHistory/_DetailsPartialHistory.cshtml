<div class="card shadow-sm border-0 rounded-lg">
    <div class="row g-0">
        <!-- Left: Image section -->
        <div class="col-md-5">
            <div class="position-relative">
                <img src="/Files/Images/@(Model?.Image??"")" class="img-fluid rounded-start" alt="Image" style="object-fit: cover; height: 100%; width: 100%;">
            </div>
 
        </div>
 
 
        <!-- Right: Details section -->
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title text-dark">@(Model.IsActive ? Model.Case : Model.Year)  </h2>
                <p class="card-text mb-4">@Html.Raw(@Model.Description)</p>
 
@*                  <p class="text-muted">Created on: @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
 *@            </div>
        </div>
    </div>
</div>
