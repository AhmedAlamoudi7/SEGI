<div class="card shadow-sm border-0 rounded-lg">
    <div class="row g-0">
        <!-- Left: Image section -->
 
        <!-- Right: Details section -->
        <div class="col-md-12">
            <div class="card-body">
                <h2 class="card-title text-dark">@Model.Title</h2>
                <h2 class="card-title text-dark">@Model.Location</h2>
                <h2 class="card-title text-dark">@Model.IsActive</h2>
                @{
                var color = @Model.IsActive ? "green" : "red";
                var text = @Model.IsActive ? "Open" : "Closed";
                    <h2 class ="card-title text-dark"> 
                    <button style="background-color: @color; color: white; border: none; padding: 5px 10px; border-radius: 5px;">@text</button>
                    </h2>
                }
                <h2 class="card-title text-dark">@Model.CreatedAt</h2>

                <p class="text-muted">
                    Category:
                    @if (Model.Categories != null && Model.Categories.Count > 0)

                    {
                        <span class="text-primary">
                            @for (var i = 0; i < Model.Categories.Count; i++)

                            {
                                @Model.Categories[i]
                                @if (i < Model.Categories.Count - 1)

                                {
                                    @: ,
                                }
                            }
                        </span>
                    }

                    else

                    {
                        <span class="text-primary">No categories</span>
                    }
                </p>
                <h2 class="card-title text-dark">Views : @Model.ViewCount</h2>

                <p class="card-text mb-4">@Html.Raw(@Model.Description)</p>
             </div>
        </div>
    </div>
</div>
