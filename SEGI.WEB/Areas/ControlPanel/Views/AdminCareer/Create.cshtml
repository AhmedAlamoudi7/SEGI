               function submitId() {
    let formData = new FormData();

       let title = $("#name_title").val();
       let location = $("#name_location").val();
       let status = $("#isActive").val();
       let description = $("#name_description").val();
 
    // Retrieve selected categories from Tagify
    const tagifyInput = document.querySelector("#name_categoryIds");
    const selectedCategories = JSON.parse(tagifyInput.value).map(tag => tag.value);

 

    // Append all form data
                    formData.append("title", title);
                    formData.append("description", description);
                    formData.append("location", location);
                    formData.append("isActive", status);


    // Append each category ID
    selectedCategories.forEach(categoryId => {
        formData.append("CategoryIds[]", categoryId);
    });
                     
    // AJAX request
    $.ajax({
        type: 'POST',
        url: '/ControlPanel/AdminCareer/Create',
        processData: false,
        contentType: false,
        data: formData,
        success: function (response) {
            if (response.success) {
                Swal.fire({
                                    text: "Career added successfully!",
                    icon: "success",
                    buttonsStyling: false,
                    confirmButtonText: "OK",
                    customClass: {
                        confirmButton: "btn btn-primary"
                    }
                }).then(function (result) {
                    if (result.isConfirmed) {
                                        window.location = "/ControlPanel/AdminCareer/Index";
                    }
                });
            } else {
                Swal.fire({
                    text: response.responseText,
                    icon: "error",
                    buttonsStyling: false,
                    confirmButtonText: "Try Again",
                    customClass: {
                        confirmButton: "btn btn-primary"
                    }
                });
            }
