<!-- Load Summernote -->
    <!-- include libraries(jQuery, bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.9.0/dist/summernote.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
                $('#summernote').summernote({
                    height: 300,                 // Set editor height
                    focus: true,                 // Focus on editor after initialization
                    toolbar: [
                        ['style', ['style', 'bold', 'italic', 'underline', 'strikethrough', 'clear']],
                        ['font', ['fontsize', 'color', 'fontname']],
                        ['para', ['ul', 'ol', 'paragraph', 'height']],
                        ['insert', ['link', 'video', 'table', 'hr']],
                        ['misc', ['undo', 'redo']],
                        ['view', ['fullscreen', 'codeview']]
                    ],
                    fontNames: ['Arial', 'Courier New', 'Georgia', 'Verdana', 'Comic Sans MS', 'Impact', 'Times New Roman', 'Tahoma'],
                    fontSizes: ['8', '10', '12', '14', '16', '18', '20', '24', '28', '36', '48', '64'],
                    placeholder: 'Type your content here...',
                    dialogsInBody: true,
                });

                // Set the Summernote content with the value of @Model.Description
                var description = $('#name_description').val(); // Get the value from the hidden input
                $('#summernote').summernote('code', description); // Set the value to Summernote

                // Sync Summernote content to the hidden input before form submission
                $('#kt_modal_new_model_submit').click(function() {
                    var summernoteContent = $('#summernote').summernote('code');
                    $('#name_description').val(summernoteContent); // Set the hidden input's value to Summernote's content
                });
            });
    </script>

    <!--end::Custom Javascript-->
    <script src="~/assets/js/new-OurHistoryAboutUs.js"></script>
    <!--end::Javascript-->
