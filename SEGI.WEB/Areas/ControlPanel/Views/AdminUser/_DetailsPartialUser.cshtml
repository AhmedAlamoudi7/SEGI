<div class="card shadow-sm border-0 rounded-lg">
    <div class="row g-0">
        <!-- Left: Image section -->
        <div class="col-md-5">
            <div class="position-relative">
                <img src="/Files/Images/@Model.Image" class="img-fluid rounded-start" alt="Cover Image" style="object-fit: cover; height: 100%; width: 100%;">
        
            </div>
        </div>
        <!-- Right: Details section -->
        <div class="col-md-7">
            <div class="card-body">
        
                <h2 class="card-title text-dark">@Model.FullName</h2>
                <p class="card-text mb-4">Username: @Model.Username</p>
                <p class="card-text mb-4">Email: @Model.Email</p>
                <p class="card-text mb-4">EmailConfirmed: <span class="text-primary">@Model.EmailConfirmed</span></p>
                <p class="card-text mb-4 ">Active: @Model.Active</p>
                <p class="text-muted">Created on: @Model.CreatedAt</p>

            </div>
        </div>
    </div>
</div>