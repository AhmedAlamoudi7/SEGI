@model UpdateApplicationUserDto

@{
    ViewData["Title"] = "Edit User";
}




<!--begin::Main-->
<div class="app-main flex-column flex-row-fluid" id="kt_app_main">
    <!--begin::Content wrapper-->
    <div class="d-flex flex-column flex-column-fluid">
        <!--begin::Toolbar-->
        <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
            <!--begin::Toolbar container-->
            <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Update</h1>
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">
                            <a href="~/ControlPanel/AdminUser/Index" class="text-muted text-hover-primary">User</a>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">Update </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <!--end::Item-->
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
                <!--begin::Actions-->
                <!--end::Actions-->
            </div>
            <!--end::Toolbar container-->
        </div>
        <!--end::Toolbar-->
        <!--begin::Content-->
        <div id="kt_app_content" class="app-content flex-column-fluid">
            <!--begin::Content container-->
            <div id="kt_app_content_container" class="app-container container-xxl">
                <!--begin::Card-->
                <div class="card">
                    <!--begin::Card header-->
                    <div class="card-header border-0 pt-6">
                    </div>
                    <!--end::Card header-->
                    <!--begin::Card body-->
                    <div class="card-body py-4">
                        <!--begin::Modal body-->
                        <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                            <!--begin:Form-->
                            <form class="form" id="kt_modal_new_model_form" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" id="name_id" />
                                <!--begin::Heading-->
                                <div class="mb-13 text-center">
                                    <!--begin::Title-->
                                    <!--end::Title-->
                                </div>
                                <!--end::Heading-->
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-column mb-8 fv-row">
                                                <!--begin::Label-->
                                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                                    <span class="required">FullName</span>
                                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"></i>
                                                </label>
                                                <!--end::Label-->
                                                <input type="text" class="form-control form-control-solid" id="name_fullName" name="fullName" value="@Model.FullName" />
                                                <span class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-column mb-8 fv-row">
                                                <!--begin::Label-->
                                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                                    <span class="required">Email</span>
                                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"></i>
                                                </label>
                                                <!--end::Label-->
                                                <input type="email" class="form-control form-control-solid" id="name_email" name="email" value="@Model.Email" />
                                                <span class="text-danger"></span>

                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-column mb-8 fv-row">
                                                <!--begin::Label-->
                                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                                    <span class="required">Image</span>
                                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"></i>
                                                </label>
                                                <!--end::Label-->
                                                <input type="file" class="form-control form-control-solid" id="name_image" name="image" />
                                                <span class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-column mb-8 fv-row">
                                                <!--begin::Label-->
                                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                                    <span class="required">Role</span>
                                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify a target name for future usage and reference"></i>
                                                </label>
                                                <!--end::Label-->
                                                <div class="col-lg-12 fv-row">
                                                    <select asp-for="UserType" class="form-control" id="name_userType" name="userType">
                                                        <option value="@UserType.User">User</option>
                                                        <option value="@UserType.SuperAdmin">SuperAdmin</option>
                                                    </select>
                                                    <span asp-validation-for="UserType" class="text-danger"></span>
                                                    <span class="text-danger"></span>
                                                </div>
                                                <!--end::Col-->
                                            </div>
                                            <!--end::Heading-->
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="d-flex flex-column mb-8 fv-row">
                                                <!--begin::Label-->
                                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                                    <span class="required">Phone Number</span>
                                                    <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"></i>
                                                </label>
                                                <!--end::Label-->
                                                <input type="number" class="form-control form-control-solid" id="name_phoneNumber" name="phoneNumber" value="@Model.PhoneNumber" />
                                                <span class="text-danger"></span>

                                            </div>
                                        </div>


                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Actions-->
                                    <div class="text-center">
                                        <button type="reset" id="kt_modal_new_model_cancel" class="btn btn-light me-3">Cancel</button>
                                        <button type="submit" id="kt_modal_new_model_submit" class="btn btn-primary">
                                            <span class="indicator-label">Update</span>
                                            <span class="indicator-progress">
                                                PleaseWait...
                                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                    <!--end::Actions-->
                                </div>

                            </form>
                            <!--end:Form-->
                        </div>
                        <!--end::Modal body-->
                    </div>
                    <!--end::Card body-->
                </div>
                <!--end::Card-->
            </div>
            <!--end::Content container-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Content wrapper-->
</div>


<!--end:::Main-->
@section Scripts{
    <!--end::Modals-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!--begin::Javascript-->
    <!--begin::Global Javascript Bundle(used by all pages)-->
    <script src="~/Metronic/dist/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/Metronic/dist/assets/js/scripts.bundle.js"></script>
    <!--end::Global Javascript Bundle-->
    <!--begin::Vendors Javascript(used by this page)-->
    <script src="~/Metronic/dist/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Vendors Javascript-->
    <!--begin::Custom Javascript(used by this page)-->
    <script type="text/javascript">
        "use strict";

        // Class definition
        var KTModalNewTarget = function () {
            var submitButton;
            var cancelButton;
            var validator;
            var form;
            var modal;
            var modalEl;

            // Init form inputs
            var initForm = function () {



            }

            // Handle form validation and submittion
            var handleForm = function () {
                // Stepper custom navigation

                // Init form validation rules. For more info check the FormValidation plugin's official documentation:https://formvalidation.io/
                validator = FormValidation.formValidation(
                    form,
                    {
                        fields: {
                            'fullName': {
                                validators: {
                                    notEmpty: {
                                        message: 'FullName'
                                    }
                                }
                            },
                            'email': {
                                validators: {
                                    notEmpty: {
                                        message: 'Email'
                                    }
                                }
                            },
                            'phoneNumber': {
                                validators: {
                                    notEmpty: {
                                        message: 'Phone Number'
                                    }
                                }
                            },
                            'balance': {
                                validators: {
                                    notEmpty: {
                                        message: 'Balance'
                                    }
                                }
                            },
                            'image': {
                                validators: {                                
                                    file: {
                                        extension: 'jpg,png,svg,webp',
                                        type: 'image/jpeg,image/png,image/svg,image/webp,',
                                        message: 'Only .jpg .svg  webp and .png files are allowed'
                                    }
                                }
                            },
                        },
                        plugins: {
                            trigger: new FormValidation.plugins.Trigger(),
                            bootstrap: new FormValidation.plugins.Bootstrap5({
                                rowSelector: '.fv-row',
                                eleInvalidClass: '',
                                eleValidClass: ''
                            })
                        }
                    }
                );
                function submitId() {

                    let data = $("#kt_modal_new_model_form").serialize();
                    let id = $("#name_id").val();

                    let fullname = $("#name_fullName").val();
                    let email = $("#name_email").val();
                    let image = $("#name_image")[0].files[0];
                    let name_userType = $('#name_userType option:selected').val();
                    let phoneNumber = $("#name_phoneNumber").val();
                    let balance = $("#name_balance").val();

                    let formData = new FormData();
                    formData.append("fullName", fullname);
                    formData.append("email", email);
                    formData.append("image", image);
                    formData.append("userType", name_userType);
                    formData.append("phoneNumber", phoneNumber);
                    formData.append("balance", balance);

                    $.ajax({
                        type: 'POST',
                        url: '/ControlPanel/AdminUser/Update/' + id + '',
                        //contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                        processData: false,
                        contentType: false,
                        data: formData,
                        success: function (response) {
                            if (response.success) {

                                Swal.fire({
                                    text: "EditSuccessfully",
                                    icon: "success",
                                    buttonsStyling: false,
                                    confirmButtonText: "EditSuccessfully",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                }).then(function (result) {
                                    if (result.isConfirmed) {
                                        form.reset();
                                        window.location = "/ControlPanel/AdminUser/Index";
                                    }
                                });
                            } else {
                                // DoSomethingElse()
                                Swal.fire({
                                    text: response.responseText,
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "TryAgain",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                });
                            };
                        },
                        error: function () {
                            Swal.fire({
                                text: "AddError",
                                icon: "error",
                                buttonsStyling: false,
                                confirmButtonText: "TryAgain",
                                customClass: {
                                    confirmButton: "btn btn-primary"
                                }
                            });
                        }
                    })
                }
                // Action buttons
                submitButton.addEventListener('click', function (e) {
                    e.preventDefault();

                    // Validate form before submit
                    if (validator) {
                        validator.validate().then(function (status) {
                            console.log('validated!');

                            if (status == 'Valid') {
                                submitButton.setAttribute('data-kt-indicator', 'on');

                                // Disable button to avoid multiple click
                                submitButton.disabled = true;

                                setTimeout(function () {
                                    submitButton.removeAttribute('data-kt-indicator');

                                    // Enable button
                                    submitButton.disabled = false;
                                    submitId();
                                }, 2000);
                            } else {
                                // Show error message.
                                Swal.fire({
                                    text: "AddError",
                                    icon: "error",
                                    buttonsStyling: false,
                                    confirmButtonText: "Ok",
                                    customClass: {
                                        confirmButton: "btn btn-primary"
                                    }
                                });
                            }
                        });
                    }
                });

                cancelButton.addEventListener('click', function (e) {
                    e.preventDefault();


                    Swal.fire({
                        text: "CancelRequest",
                        icon: "warning",
                        showCancelButton: true,
                        buttonsStyling: false,
                        confirmButtonText: "Yes",
                        cancelButtonText: "No",
                        customClass: {
                            confirmButton: "btn btn-primary",
                            cancelButton: "btn btn-active-light"
                        }
                    }).then(function (result) {
                        if (result.value) {
                             window.location = "Index";
                        } else if (result.dismiss === 'cancel') {
                            Swal.fire({
                                text: "NotCancelled",
                                icon: "error",
                                buttonsStyling: false,
                                confirmButtonText: "Ok",
                                customClass: {
                                    confirmButton: "btn btn-primary",
                                }
                            });
                        }
                    });
                });
            }

            return {
                // Public functions
                init: function () {
                    // Elements
                    form = document.querySelector('#kt_modal_new_model_form');
                    submitButton = document.getElementById('kt_modal_new_model_submit');
                    cancelButton = document.getElementById('kt_modal_new_model_cancel');

                    initForm();
                    handleForm();
                }
            };
        }();

        // On document ready
        KTUtil.onDOMContentLoaded(function () {
            KTModalNewTarget.init();
        });



    </script>
 		 }